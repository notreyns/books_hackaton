<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Newbooks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/MainButton</item>
    </style>


    <style name="Theme.Intersport.Splash" parent="Theme.Newbooks">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="registrationEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textAppearance">@style/regular_input</item>
        <item name="android:paddingTop">23dp</item>
        <item name="android:paddingBottom">23dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_button_background</item>
        <item name="android:radius">60dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

